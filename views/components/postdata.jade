form
  .row
    .col-md-3 キー
    .col-md 現在のデータ
    .col-md 読み込まれたデータ
  each item, key in json.template.mapping_table
    case key
      when 'custom_fields'
        each cf in item
          .form-row.py-1
            label.col-md-3.col-form-label.col-form-label-sm(for='issue_custom_field_values_#{cf.id}') #{key}(#{cf.id}):
            .col-md
              textarea.form-control.form-control-sm.issue(id='issue_custom_field_values_#{cf.id}', rows='1')
            .col-md
              textarea.form-control.form-control-sm.postissue(id='postissue_custom_field_values_#{cf.id}', rows='1')
      default
        .form-row.py-1
          - var id = (item.id ? `${key}_id` : key);
          label.col-md-3.col-form-label.col-form-label-sm(for='issue_#{id}') #{id}:
          .col-md
            textarea.form-control.form-control-sm.issue(id='issue_#{id}', rows='1')
          .col-md
            textarea.form-control.form-control-sm.postissue(id='postissue_#{id}', rows='1')
